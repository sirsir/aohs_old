<% content_for :header do %>

<% end %>

<% content_for :submenu do %>
  <div id="submenu">
    <table width="100%">
      <tr>
        <td align="left">
          <ul>
            <li><%= link_image_tag('Back','back.png',{:controller => "groups",:action => 'index'},{:title => 'Back to group list'}) %></li>
          </ul>
        </td>
        <td align="right">

        </td>
      </tr>
    </table>
  </div>
<% end %>

<div class="div-form-default-style1">
  <table class="tblfrm" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td><span class="span-form-title">New group</span></td>
    </tr>
    <tr>
      <td><span class="span-form-name">Group infomation</span></td>
    </tr>
    <tr>
      <td>
        <% form_for :group,:url => groups_path do |f| %>
          <%=display_frm_error(flash[:message]) %>  
          <table  class="tbl-frm-details" cellpadding="0" cellspacing="0">
            <tr>
              <td width="140px" valign="top"><label>Group's name:</label></td>
              <td><%= f.text_field :name,:class =>'input-text' %><span class="span-require">*</span>
              <br><span class="note">Group name must have a minimum of 4 characters</span></td>
            </tr>
            <tr>
              <td><label>Description:</label></td>
              <td><%= f.text_field :description,:class =>'input-text' %></td>
            </tr>
            <tr>
              <td><label>Leader:</label></td>
              <td><%= f.collection_select "leader_id",Manager.find(:all,:conditions=>"role_id <> 0",:order => 'display_name'), :id, :display_name,{:include_blank => 'None'},{:class =>'input-text'} %></td>
            </tr>
            <tr>
              <td><label>Categories list:</label><span class="span-require">*</span></td>
              <td></td>
            </tr>
            <% if_first = true %>
            <% @group_category_types.each do |gct| %>
            <% include_blank = 'None' %>
            <tr>
              <td><label>&nbsp;&nbsp;&nbsp;&nbsp;- <%= gct.name %>:</label></td>
              <td><%= f.collection_select "id",GroupCategory.find(:all, :conditions=>["group_category_type_id=:gct_id",{:gct_id=>gct.id}]),:id, :value,{:include_blank => include_blank},{:name => "cate[]",:class =>'input-text'} %><% if if_first %><span class="span-require">*</span><% end %></td>
            </tr>
            <% if_first = false %>     
            <% end %>
            <tr>
              <td></td>
              <td><span class="note">Please choose category at least one category.</span></td>
            </tr>
            <tr>
              <td></td>
              <td><%= submit_tag "Add group",{:class => 'btnAccept'} %>&nbsp;&nbsp;<%#= submit_tag "Reset",{:type =>'Reset',:class => 'btnAccept'} %></td>
            </tr>
            </table>
        <% end %>
      </td>
    </tr>
  </table>
</div>
