<% content_for :header do %>
<style>
	.div-sub-mn {
		float:left;
		width:250px;
	}
</style>
<script type="text/javascript">
	$(document).ready(function(){
		$(".div-sub-mn").mouseover(function(){
			$(this).addClass('hover');
		}).mouseout(function(){
			$(this).removeClass('hover');
		}).click(function(){
			var url = $(this).attr("url");
			window.setTimeout("window.location = \"" + url + "\";",1000);
		});
	});
</script>
<% end %>
<div class="home-main-menu">
	<div class="title">Users, groups, privileges operations, application preferences, you can upgrade the application.</div>
	<div class="sub-mn" style="width:100%;">
		<% while not @ctrl_menus.empty? %>
			<% m = @ctrl_menus.pop %>
			<div class="div-sub-mn" url="<%=url_for(m[:url])%>">
			<table cellpadding="0" cellspacing="0">
				<tr>
					<td rowspan="2" width="30px" align="center"><%= image_tag("menu_icon/#{m[:image]}")  %></td>
					<td><span class="mn-name"><%= m[:name] %></span></td>
				</tr>
				<tr>
					<td><span class="title2"><%= m[:title] %></span></td>
				</tr>
			</table>
			</div>
		<% end %>
	</div>	
</div>

